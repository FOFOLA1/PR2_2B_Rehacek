<Window x:Class="_07_WPF_02_Move_Text.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_07_WPF_02_Move_Text"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox 
            x:Name="InputTB"
            HorizontalAlignment="Left" 
            Margin="147,61,0,0" 
            TextWrapping="Wrap" 
            Text="Piš sem" 
            VerticalAlignment="Top" 
            Width="120"
            KeyDown="InputTB_KeyDown"/>
        <TextBox 
            IsEnabled="False"
            x:Name="OutTB"
            HorizontalAlignment="Left" 
            Margin="147,84,0,0" 
            TextWrapping="Wrap" 
            Text="" 
            VerticalAlignment="Top"
            Width="120"/>
        <Button 
            x:Name="MoveBtn"
            Content="Button" 
            HorizontalAlignment="Left" 
            Margin="284,64,0,0" 
            VerticalAlignment="Top" 
            Height="38" 
            Width="64"
            Click="MoveBtn_Click"/>
    </Grid>
</Window>
